@model TashanSofrasiWebApp.DTOs.FooterDTOs.UpdateFooterDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Footer İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Footer Güncellenme</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Footer kısmını buradan güncelleyebilirsiniz.
							</div>
							<input type="hidden" asp-for="FooterID" />
							<div class="form-group">
								<label for="footerlocation">Adres (Lokasyon) Bilgisi: </label>
								<input type="text" class="form-control" asp-for="FooterLocation" id="footerlocation">
							</div>
							<div class="form-group">
								<label for="footerphonenumber">Telefon No: </label>
								<input type="text" class="form-control" asp-for="FooterPhoneNumber" id="footerphonenumber">
							</div>
							<div class="form-group">
								<label for="footeremail">E-posta: </label>
								<input type="email" class="form-control" asp-for="FooterEmail" id="footeremail">
							</div>
							<div class="form-group">
								<label for="footeropeninghours">Açılış - Kapanış Saatleri</label>
								<input type="text" class="form-control" asp-for="FooterOpeningHours" id="footeropeninghours">
							</div>
							<div class="form-group">
								<label for="footerdescription">Footer Açıklaması: </label>
								<textarea type="text" class="form-control" asp-for="FooterDescription" id="footerdescription"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Footer Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


