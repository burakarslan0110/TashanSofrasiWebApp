@model TashanSofrasiWebApp.DTOs.FeatureDTOs.UpdateFeatureDTO
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan (Slider) İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Öne Çıkan (Slider) Güncellenme</div>
						</div>
						<div class="card-body">
							<div class="card-sub">
								Öne Çıkan (Slider) kısmını buradan güncelleyebilirsiniz.
							</div>
							<input type="hidden" asp-for="FeatureID" />
							<div class="form-group">
								<label for="featuretitle1">Öne Çıkan 1 Başlık: </label>
								<input type="text" class="form-control" asp-for="FeatureTitle1" id="featuretitle1">
							</div>
							<div class="form-group">
								<label for="featuredescription1">Öne Çıkan 1 Açıklama: </label>
								<textarea rows="5" type="text" class="form-control" asp-for="FeatureDescription1" id="featuredescription1"></textarea>
							</div>
							<div class="form-group">
								<label for="featuretitle2">Öne Çıkan 2 Başlık: </label>
								<input type="text" class="form-control" asp-for="FeatureTitle2" id="featuretitle2">
							</div>
							<div class="form-group">
								<label for="featuredescription2">Öne Çıkan 2 Açıklama: </label>
								<textarea rows="5" type="text" class="form-control" asp-for="FeatureDescription2" id="featuredescription2"></textarea>
							</div>
							<div class="form-group">
								<label for="featuretitle3">Öne Çıkan 3 Başlık: </label>
								<input type="text" class="form-control" asp-for="FeatureTitle3" id="featuretitle3">
							</div>
							<div class="form-group">
								<label for="featuredescription3">Öne Çıkan 3 Açıklama: </label>
								<textarea rows="5" type="text" class="form-control" asp-for="FeatureDescription3" id="featuredescription3"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Öne Çıkan (Slider) Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

