@model TashanSofrasiWebApp.DTOs.TestimonialDTOs.UpdateTestimonialDTO
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Referans İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Referans Girişi</div>
						</div>
						<input type="hidden" class="form-control" asp-for="TestimonialID" id="testimonialid" />
						<div class="card-body">
							<div class="card-sub">
								Referans kısmını buradan güncelleyebilirsiniz.
							</div>
							<div class="form-group">
								<label for="testimonialnamesurname">Referans Ad Soyad: </label>
								<input type="text" class="form-control" asp-for="TestimonialNameSurname" id="testimonialnamesurname">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="testimonialimageurl">Referans Görsel Bağlantısı: </label>
								<input type="text" class="form-control" asp-for="TestimonialImageURL" id="testimonialimageurl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="testimonialtitle">Referans Başlık: </label>
								<input type="text" class="form-control" asp-for="TestimonialTitle" id="testimonialtitle">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="testimonialcomment">Referans Yorum: </label>
								<textarea type="text" class="form-control" asp-for="TestimonialComment" id="testimonialcomment"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Referans Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

