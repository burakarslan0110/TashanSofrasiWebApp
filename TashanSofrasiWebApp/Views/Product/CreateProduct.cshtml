@model TashanSofrasiWebApp.DTOs.ProductDTOs.CreateProductDTO
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Ürün Girişi</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Ürün Adı: </label>
								<input type="text" class="form-control" asp-for="ProductName" id="productname">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Ürün Açıklaması: </label>
								<input type="text" class="form-control" asp-for="ProductDescription" id="productdescription">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Ürün Fiyatı: </label>
								<input type="number" class="form-control" asp-for="ProductPrice" id="productprice">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="categoryname">Ürün Görsel Bağlantısı: </label>
								<input type="text" class="form-control" asp-for="ProductImageURL" id="productimageurl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Yeni Ürün Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

